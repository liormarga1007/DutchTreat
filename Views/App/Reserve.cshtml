@model ReserveViewModel
@{
    ViewBag.Title = "Reserve A Table";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <label asp-for="City">City</label>
        <input asp-for="City">
        <span asp-validation-for="City" class="text-danger"></span>
        <br />
        <label asp-for="Restaurant"></label>
        <input asp-for="Restaurant" />
        <span asp-validation-for="Restaurant" class="text-danger"></span>
        <br />
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br />
        <label asp-for="Surname"></label>
        <input asp-for="Surname" />
        <span asp-validation-for="Surname" class="text-danger"></span>
        <br />
        <label asp-for="Date"></label>
        <input type="date" asp-for="Date" />
        <span asp-validation-for="Date" class="text-danger"></span>
        <br />
        <label asp-for="Time"></label>
        <input type="time" asp-for="Time" />
        <span asp-validation-for="Time" class="text-danger"></span>
        <br />
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
        <br />
        <label asp-for="Phone"></label>
        <input type="tel" asp-for="Phone" />
        <span asp-validation-for="Phone" class="text-danger"></span>
        <br />
        <input type="submit" value="Reserve a table" />
        <div class="text-success">@ViewBag.UserMessage</div>
    </form>
</div>
