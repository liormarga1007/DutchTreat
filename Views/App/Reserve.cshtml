@model ReserveViewModel
@{
    ViewBag.Title = "Reserve A Table";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/autocompletecity.js"></script>
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<div class="col-md-6">
    <div class="card card-body bg-light">
        <img id="myImg" src="https://www.w3schools.com/jsref/compman.gif" width="0" height="0" type='hidden'>
        <img id="myImg2" src="https://www.w3schools.com/jsref/compman.gif" width="0" height="0" type='hidden'>
        <img id="myImg3" src="https://www.w3schools.com/jsref/compman.gif" width="0" height="0" type='hidden'>
        <img id="myImg4" src="https://www.w3schools.com/jsref/compman.gif" width="0" height="0" type='hidden'>
        <div id="reserveToggle"></div>
        <form method="post" class="reserve-form">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="City">City</label>
                <input asp-for="City" class="form-control" id="myInput" autocomplete="off">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Restaurant"></label>
                <input asp-for="Restaurant" class="form-control" id="restaurants" autocomplete="off" />
                <span asp-validation-for="Restaurant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diners"></label>
                <input type="number" asp-for="Diners" class="form-control" />
                <span asp-validation-for="Diners" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time"></label>
                <input type="time" asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <input type="tel" asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Reserve a table" class="btn btn-primary" id="demo" />
                <div class="text-success">@ViewBag.UserMessage</div>
            </div>
        </form>
    </div>
</div>