@{
    ViewBag.Title = "Home Page";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<div class="col-md-6">
    <div class="card card-body bg-light">
        <div class="product-info">
            <img src="~/img/Tel Aviv.jfif" />
            <h3>Restaurants</h3>
            <ul class="product-props">
                <li>Restaurants</li>
                <li>Title: Make Reservation</li>
                <li>Description: Restaurant</li>
            </ul>
            <form method="get" action="/reserve">
                <button id="buyButton">Make Reservation</button>
            </form>
        </div>
        <!-- Forms are used to fetch information from the user -->

        <div>
            <div id="loginToggle">Login</div>
            <form class="popup-form">
                <div>
                    <label>Username:</label>
                    <input />
                </div>
                <div>
                    <label>Password:</label>
                    <input type="password" />
                </div>
                <div>
                    <input type="checkbox" />
                    <label>Remember me?</label><br />
                </div>
                <div>
                    <input type="Submit" value="Login" />
                </div>
            </form>
        </div>
    </div>
</div>