<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Restaurant Tron : @ViewBag.Title</title>
    <environment names="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/fortawesome/fontawesome-free/css/all.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>

    <environment names="Staging,Production">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/fortawesome/fontawesome-free/css/all.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>

</head>
<body>
    <header class="container">
        <div class="col-md-12">
            <nav class="navbar navbar-dark bg-dark navbar-expand-md">
                <h1 class="navbar-brand"><i class="fas fa-hamburger"></i> Restaurant Tron</h1>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="theMenu" class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="App" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="App" asp-action="Reserve">Reserve</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="App" asp-action="About">About</a>
                        </li>
                        @*@if (User.Identity.IsAuthenticated)
                            {
                                <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                            }
                            else
                            {
                                <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                            }*@
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <section class="container">
        <h2 class="text-center">@ViewBag.Title</h2>
        @RenderBody()
    </section>
    <footer class="container">
        <div class="text-center">Copyright 2021 Restaurant Tron LLC</div>
    </footer>
    <!-- javascript generally has stuff that manipulates contents on the website. hence load it towards the end of the page. -->
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/index.js"></script>
        <script src="~/js/bundle.js"></script>
        <script src="~/js/lib.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/index.js"></script>
        <script src="~/js/bundle.js"></script>
        <script src="~/js/lib.js"></script>
    </environment>
    @* scripts section is not required. if one of the pages creates a section called scripts, then put it here in the layout page

    *@
    @RenderSection("scripts", true)
</body>
</html>
